<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd
    	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config />
    <context:component-scan base-package="com.beyond.bpush.pipe"/>

    <bean id="jedisConfig" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>classpath:beyond/jedis.properties</value>
            </list>
        </property>
    </bean>

    <bean id="redisBucket" class="com.beyond.bpush.core.RedisBucket">
        <constructor-arg index="0" ref="jedisConfig" />
    </bean>

    <bean id="payloadRedisQueue" class="com.beyond.bpush.pipe.redis.PayloadRedisQueue" />

</beans>
